/* actors */
timer : std.Trigger(data=true, tick=1.0)
camera : media.Camera()
screen : media.ImageRenderer()
player : media.PlayAudio(audofile="dingdong.ogg")
detect : media.FaceDetect()

/* Connections */
timer.data > camera.trigger
camera.image > screen.image
camera.image > detect.image
detect.faces > player.play