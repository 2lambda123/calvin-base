{
	"id": "policy7",
	"description": "Security policy for 'David' for all possible actor signers for testNode4",
	"rule_combining": "permit_overrides",
	"target": {
		"subject": {
			"first_name": "David",
			"actor_signer": ".*"
		}
	},
	"rules": [
		{
			"id": "policy7_rule1",
			"description": "Permit access to 'calvinsys.*', and 'runtime' if condition is true",
			"effect": "permit",
			"target": {
				"action": {
					"requires": ["calvinsys.*", "runtime"]
				}
			},
			"condition": {
				"function": "equal",
				"attributes": ["attr:resource:node_name.name", "testNode4"]
			}
		}
	]
}
