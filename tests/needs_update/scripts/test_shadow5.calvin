component TheSource() -> out {
  first: std.CountTimer(start=1, sleep=0.1, steps=1000000000)
  second: std.Identity()
  
  first.integer > second.token
  second.token > .out
}
button : TheSource()
check : std.Sum()
bell : test.Sink(store_tokens=true, quiet=1, active=true)

button.out > check.integer
check.integer > bell.token
